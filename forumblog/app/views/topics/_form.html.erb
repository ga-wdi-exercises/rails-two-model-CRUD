<%= form_for @topic do |f| %>

<% if @topic.errors.any? %>
    <h2>
      It looks like your topic is too long
    </h2>
<% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to main', topics_path %>
