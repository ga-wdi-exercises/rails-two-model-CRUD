<h2>Playlists</h2>
<h3>Add New playlist <%= link_to "(+)", new_playlist_path  %></h3>

<% @houses.each do |playlist|  %>
  <h3><%= link_to playlist.name, playlist_path(playlist) %> <%= link_to "(edit)", edit_playlist_path(playlist) %></h3>
  <p><%= link_to "Delete Playlist", playlist_path(playlist),
          method: :delete,
          data: {confirm: "Are you sure?"} %></p>

  <% end %>
