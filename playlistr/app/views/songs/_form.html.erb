<%= form_for([@playlist, @song]) do |f| %>
  <p class="alert"><%= @playlist.errors.full_messages.first if @song.errors.any? %></p>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist %>
  <%= f.text_field :artist %>

  <%= f.label :song_url %>
  <%= f.text_field :song_url %>

  <%= f.submit %>

<% end %>
